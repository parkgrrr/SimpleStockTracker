<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="parkerstevens.net.simplestocktracker.viewmodel.TransactionDetailViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/company_name_text_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="24dp"
            android:text="Big Long Company name whatever"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Microsoft Corporation and sons"/>

        <TextView
            android:id="@+id/company_symbol_text_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="28dp"
            android:text="@{viewModel.symbol}"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/company_name_text_detail"
            tools:text="MSFT"/>

        <EditText
            android:id="@+id/quantity_text_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="48dp"
            android:ems="10"
            android:inputType="number"
            android:text="@={viewModel.quantity}"
            app:layout_constraintBottom_toTopOf="@+id/price_text_edit"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="100"/>

        <EditText
            android:id="@+id/price_text_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="48dp"
            android:ems="10"
            android:inputType="number"
            android:text="@={viewModel.price}"
            app:layout_constraintBottom_toTopOf="@+id/fees_text_edit"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="53.99"/>

        <EditText
            android:id="@+id/fees_text_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="65dp"
            android:layout_marginLeft="48dp"
            android:ems="10"
            android:inputType="number"
            android:text="@={viewModel.fees}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="5.00"/>

        <TextView
            android:id="@+id/quantity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="48dp"
            android:text="@string/quantity"
            app:layout_constraintBottom_toTopOf="@+id/quantity_text_edit"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-7dp"
            android:layout_marginLeft="48dp"
            android:text="@string/price"
            app:layout_constraintBottom_toTopOf="@+id/price_text_edit"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/fees_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="48dp"
            android:text="@string/fees"
            app:layout_constraintBottom_toTopOf="@+id/fees_text_edit"
            app:layout_constraintLeft_toLeftOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</layout>